<h1>Listing microposts</h1>
<table class="table table-bordered table-striped" id="sortable">
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
    </tr>
  </thead>
  <tbody>
    <% @microposts.each do |micropost| %>
      <tr data-item-id=<%= "#{micropost.id}" %> class="item">
        <td>
          <%= micropost.content %>
        </td>
        <td>
          <%= link_to 'show', micropost_path(micropost), :class => 'btn btn-default pull-right' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Micropost', new_micropost_path %>
