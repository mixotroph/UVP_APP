<% provide(:title, 'Home') %>
<% if signed_in? %>
<div class="row">
	<aside class="span4">
		<section>
			<%= render 'shared/user_info' %>
		</section>
		<section>
			<%= render 'shared/micropost_form' %>
		</section>
	</aside>
</div>
<% else %>
<div class="center hero-unit">
	<h1>Welcome to UVP-Manager</h1>
	<h2>
		This is going to be THE App for creating and managing lesson plans.
	</h2>
	<%= link_to "Learn more!", about_path, class: "btn btn-large btn-info" %>
	<%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-success" %>
</div>
<% end %>
